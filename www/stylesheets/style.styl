cursor-color = #f0f0f0

@keyframes cursorBlink
  from
    box-shadow: inset 0 0 0 0.1em cursor-color, inset 0 0 0.5em cursor-color
  to
    box-shadow: inset 0 0 0 0.1em darken(cursor-color, 30%), inset 0 0 0.5em cursor-color

