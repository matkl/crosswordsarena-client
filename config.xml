<?xml version='1.0' encoding='utf-8'?>
<widget id="com.crosswordsarena" version="2.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Crosswords Arena</name>
    <description>Free word game for two players. Play online against friends or the computer.</description>
    <author email="matthias@klein.pw" href="http://matthiasklein.me">Matthias Klein</author>

    <icon src="res/favicon.png" />
    <platform name="android">
        <icon src="res/favicon-36.png" density="ldpi" />
        <icon src="res/favicon-48.png" density="mdpi" />
        <icon src="res/favicon-72.png" density="hdpi" />
        <icon src="res/favicon-96.png" density="xhdpi" />
        <icon src="res/favicon-144.png" density="xxhdpi" />
        <icon src="res/favicon-192.png" density="xxxhdpi" />
    </platform>

    <platform name="ios">
        <icon src="res/favicon-29.png" width="29" height="29" />
        <icon src="res/favicon-40.png" width="40" height="40" />
        <icon src="res/favicon-50.png" width="50" height="50" />
        <icon src="res/favicon-57.png" width="57" height="57" />
        <icon src="res/favicon-58.png" width="58" height="58" />
        <icon src="res/favicon-60.png" width="60" height="60" />
        <icon src="res/favicon-72.png" width="72" height="72" />
        <icon src="res/favicon-76.png" width="76" height="76" />
        <icon src="res/favicon-80.png" width="80" height="80" />
        <icon src="res/favicon-100.png" width="100" height="100" />
        <icon src="res/favicon-114.png" width="114" height="114" />
        <icon src="res/favicon-120.png" width="120" height="120" />
        <icon src="res/favicon-144.png" width="144" height="144" />
        <icon src="res/favicon-152.png" width="152" height="152" />
        <icon src="res/favicon-180.png" width="180" height="180" />
    </platform>

    <platform name="wp8">
        <icon src="res/favicon-62.png" width="62" height="62" />
        <icon src="res/favicon-99.png" width="99" height="99" />
        <icon src="res/favicon-173.png" width="173" height="173" />
        <icon src="res/favicon-200.png" width="200" height="200" />
    </platform>

    <preference name="permissions" value="none" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />

    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" version="1.0.1" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" version="1.0.0" />
    <gap:plugin name="cordova-plugin-globalization" source="npm" version="1.0.1" />
    <gap:plugin name="cordova-plugin-media" source="npm" version="1.0.1" />
    <gap:plugin name="cordova-plugin-vibration" source="npm" version="1.2.0" />
    <gap:plugin name="org.crosswalk.engine" source="pgb" version="1.3.0" />

    <gap:config-file platform="android" parent="/manifest" mode="delete">
        <uses-permission android:name="android.permission.RECORD_AUDIO" />
    </gap:config-file>
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
