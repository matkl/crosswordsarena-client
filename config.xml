<?xml version='1.0' encoding='utf-8'?>
<widget id="com.crosswordsarena" version="2.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Crosswords Arena</name>
    <description>Free word game for two players. Play online against friends or the computer.</description>
    <author email="matthias@klein.pw" href="http://matthiasklein.me">Matthias Klein</author>

    <icon src="res/icon.png" />
    <platform name="android">
        <icon src="res/android/drawable-ldpi/Icon.png" density="ldpi" />
        <icon src="res/android/drawable-mdpi/Icon.png" density="mdpi" />
        <icon src="res/android/drawable-hdpi/Icon.png" density="hdpi" />
        <icon src="res/android/drawable-xhdpi/Icon.png" density="xhdpi" />
    </platform>

    <platform name="ios">
        <icon src="res/ios/icon/Icon.png" width="57" height="57" />
        <icon src="res/ios/icon/Icon@2x.png" width="114" height="114" />
        <icon src="res/ios/icon/Icon-72.png" width="72" height="72" />
        <icon src="res/ios/icon/Icon-76.png" width="76" height="76" />
        <icon src="res/ios/icon/Icon-120.png" width="120" height="120" />
        <icon src="res/ios/icon/Icon-Small.png" width="29" height="29" />
        <icon src="res/ios/icon/Icon-Small@2x.png" width="58" height="58" />
        <icon src="res/ios/icon/Icon-Small-50.png" width="50" height="50" />
        <icon src="res/ios/icon/Icon-Small-100.png" width="100" height="100" />
        <icon src="res/ios/icon/Tab-bar-icon.png" width="60" height="60" />
        <icon src="res/ios/icon/toolbar-icon.png" width="40" height="40" />
    </platform>

    <platform name="wp8">
        <icon src="res/wp/appicon.png" width="62" height="62" />
        <icon src="res/wp/marketpace-icon-desktop.png" width="200" height="200" />
        <icon src="res/wp/marketpace-icon-large.png" width="173" height="173" />
        <icon src="res/wp/marketpace-icon-small" width="99" height="99" />
    </platform>

    <preference name="permissions" value="none" />

    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" version="1.0.1" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" version="1.0.0" />
    <gap:plugin name="cordova-plugin-globalization" source="npm" version="1.0.1" />
    <gap:plugin name="cordova-plugin-media" source="npm" version="1.0.1" />
    <gap:plugin name="cordova-plugin-vibration" source="npm" version="1.2.0" />
    <gap:plugin name="org.crosswalk.engine" source="pgb" version="1.3.0" />

    <gap:config-file platform="android" parent="/manifest" mode="delete">
        <uses-permission android:name="android.permission.RECORD_AUDIO" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    </gap:config-file>
    
    <preference name="xwalkVersion" value="13" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
